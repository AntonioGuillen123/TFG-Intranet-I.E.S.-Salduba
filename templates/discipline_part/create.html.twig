{% extends 'discipline_part/index.html.twig' %}

{% block titlePage %}
	Partes - Nuevo Parte
{% endblock %}

{% block jsContent %}
{% endblock %}


{% block toolbarPage %}{% endblock %}

{% block pageContent %}
	{{ form_start(form) }}
	<div id="form" class="d-flex flex-column">

		<div class="form-group">
			{{ form_label(form.part_date) }}
			{{ form_widget(form.part_date) }}
		</div>

		<div class="form-group">
			{{ form_label(form.student) }}
			{{ form_widget(form.student) }}
		</div>

		<div class="form-group inline-form">
			{{ form_label(form.crime) }}
			{{ form_widget(form.crime) }}
		</div>

		{% set displayMeasure = isDirective ? 'd-block' : 'd-none' %}
		<div class="form-group inline-form {{displayMeasure}}">
			{{ form_label(form.measure) }}
			{{ form_widget(form.measure) }}

			<div class="form-check mt-2">
				<input id="pdf" class="form-check-input" name="pdf" type="checkbox">
				<label class="form-check-label">
					Enviar PDF
				</label>
			</div>
		</div>

		<br>
		<br>

		<button type="submit" class="btn btn-primary">Poner Parte</button>
	</div>
	{{ form_end(form) }}
{% endblock %}
