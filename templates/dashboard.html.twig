{% extends 'base.html.twig' %}

{% block head %}{% endblock %}

{% block styleContent %}
	{{ encore_entry_link_tags('dashboard') }}

	{% block styleContentDashBoard %}{% endblock %}
{% endblock %}

{% block body %}
	{% include 'partials/header.html.twig' %}

	<div id="dashboard-container" class="container-fluid position-relative">
		<div class="row">
			{% include 'partials/sidebar.html.twig' %}

			<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
				<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
					<h1 class="h2">
						{% block titlePage %}Dashboard
						{% endblock %}
					</h1>
					<div class="btn-toolbar mb-2 mb-md-0 gap-2 align-items-center">
						{% block toolbarPage %}
							<div class="btn-group me-2">
								<button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
								<button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
							</div>
							<button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle d-flex align-items-center gap-1">
								<i class="fa-solid fa-calendar-days"></i>
								This week
							</button>
						{% endblock %}
					</div>
				</div>

				{% block pageContent %}
					<div id="main-content" class=" d-flex flex-wrap align-items-center m-4"></div>
				{% endblock %}
			</div>
		</main>


	</div>
</div>{% endblock %}
