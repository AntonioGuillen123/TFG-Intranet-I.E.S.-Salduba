{% extends 'message/index.html.twig' %}

{% block titlePage %}
	Mensajes - Nuevo
{% endblock %}

{% block toolbarPage %}{% endblock %}


{% block pageContent %}
	{{ form_start(form) }}
	<div id="form" class="d-flex flex-column">

	<div class="form-group inline-form">
		{{ form_label(form.user_to) }}
		{{ form_widget(form.user_to, {'attr': {'class': 'form-control mb-2 mr-sm-2'}}) }}
	</div>

	<div class="form-group">
		{{ form_label(form.affair) }}
		{{ form_widget(form.affair) }}
	</div>

	<div class="form-group">
		{{ form_label(form.content) }}
		{{ form_widget(form.content) }}
	</div>

	<button type="submit" class="btn btn-primary">Enviar Mensage</button>
	<div>

	{{ form_end(form) }}
{% endblock %}
